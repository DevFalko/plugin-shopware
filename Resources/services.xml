<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Logger-->
        <service id="monolog.handler.rotating_file.verign_ai_philos_search" class="Monolog\Handler\RotatingFileHandler"
                 public="false">
            <argument>%kernel.logs_dir%/verign_ai_philos_search_%kernel.environment%.log</argument>
            <argument>14</argument>
            <call method="pushProcessor">
                <argument type="service" id="monolog.processor.uid"/>
            </call>
        </service>

        <service id="verign_ai_philos_search.logger" class="Shopware\Components\Logger">
            <argument>plugin</argument>
            <call method="pushHandler">
                <argument type="service" id="monolog.handler.rotating_file.verign_ai_philos_search"/>
            </call>
        </service>


        <!--Services-->
        <service class="Aiphilos\Api\Items\Client" id="aiphilos.api.items.client">
        </service>

        <service class="Aiphilos\Api\Semantics\Client" id="aiphilos.api.semantics.client">
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Helpers\LocaleStringMapper"
                 id="verign_ai_philos_search_bundle_ai_philos_search.helpers.locale_string_mapper">
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Repositories\Shopware\ArticleRepository"
                 id="verign_ai_philos_search_bundle_ai_philos_search.repositories.shopware.article_repository">
            <argument id="db" type="service"/>
            <argument id="shopware.plugin.cached_config_reader" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Schemes\ArticleScheme"
                 id="verign_ai_philos_search_bundle_ai_philos_search.schemes.article_scheme">
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Schemes\Mappers\ArticleSchemeMapper"
                 id="verign_ai_philos_search_bundle_ai_philos_search.schemes_mappers.article_scheme_mapper">
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Repositories\AiPhilos\ItemRepository"
                 id="verign_ai_philos_search_bundle_ai_philos_search.repositories_ai_philos.article_repository">
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.helpers.locale_string_mapper" type="service"/>
            <argument id="aiphilos.api.items.client" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.schemes.article_scheme" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.repositories.shopware.article_repository"
                      type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.schemes_mappers.article_scheme_mapper"
                      type="service"/>
            <argument id="cache" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Initializers\DatabaseInitializer"
                 id="verign_ai_philos_search_bundle_ai_philos_search.initializers.database_initializer">
            <argument id="aiphilos.api.items.client" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.schemes.article_scheme" type="service"/>
            <argument id="cache" type="service"/>
            <argument id="verign_ai_philos_search.logger" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\ProductNumberSearch\RatedProductNumberSearch"
                 id="verign_ai_philos_search_bundle_ai_philos_search.product_number_search.rated_product_number_search"
                 decorates="shopware_search.product_number_search"
        >
            <argument
                    id="verign_ai_philos_search_bundle_ai_philos_search.product_number_search.rated_product_number_search.inner"
                    type="service"
            />
            <argument id="events" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\Cron\DatabaseSynchronizer"
                 id="verign_ai_philos_search_bundle_ai_philos_search.cron.database_synchronizer">
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.initializers.database_initializer"
                      type="service"/>
            <argument id="models" type="service"/>
            <argument id="shopware.plugin.cached_config_reader" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.helpers.locale_string_mapper" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.repositories_ai_philos.article_repository"
                      type="service"/>
            <argument id="verign_ai_philos_search.logger" type="service"/>
        </service>

        <!--Subscribers-->
        <service class="VerignAiPhilosSearch\Subscriber\Cron" id="verign_ai_philos_search.subscriber.cron">
            <tag name="shopware.event_subscriber"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.cron.database_synchronizer" type="service"/>
            <argument id="verign_ai_philos_search.logger" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Subscriber\SearchRating"
                 id="verign_ai_philos_search.subscriber.search_rating">
            <tag name="shopware.event_subscriber"/>
            <argument id="aiphilos.api.items.client" type="service"/>
            <argument id="verign_ai_philos_search.logger" type="service"/>
        </service>


        <!--Search related handlers-->
        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\ConditionHandler\AiSearchTermConditionHandler"
                 id="verign_ai_philos_search_bundle_ai_philos_search.condition_handler.ai_search_term_condition_handler"
                 decorates="shopware_searchdbal.search_condition_handler_dbal">
            <argument
                    id="verign_ai_philos_search_bundle_ai_philos_search.condition_handler.ai_search_term_condition_handler.inner"
                    type="service"/>
            <argument id="shopware.plugin.cached_config_reader" type="service"/>
            <argument id="verign_ai_philos_search_bundle_ai_philos_search.helpers.locale_string_mapper" type="service"/>
            <argument id="aiphilos.api.items.client" type="service"/>
            <argument id="cache" type="service"/>
            <argument id="events" type="service"/>
            <argument id="verign_ai_philos_search.logger" type="service"/>
        </service>

        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\SortingHandler\AiSearchRankingSortingHandler"
                 id="verign_ai_philos_search_bundle_ai_philos_search.sorting_handler.ai_search_ranking_sorting_handler"
                 decorates="shopware_searchdbal.search_ranking_sorting_handler_dbal">
            <argument
                    id="verign_ai_philos_search_bundle_ai_philos_search.sorting_handler.ai_search_ranking_sorting_handler.inner"
                    type="service"/>
        </service>

        <!-- Configurations -->
        <service class="VerignAiPhilosSearch\Bundle\AiPhilosSearchBundle\ModelConfiguration\Configuration"
                 id="verign_ai_philos_search_bundle_ai_philos_search.model_configuration.configuration"
                 decorates="shopware.model_config">
            <argument>%shopware.Model%</argument>
            <argument type="service" id="cache"/>
            <argument type="service" id="model_repository_factory"/>
            <argument type="service" id="shopware.release" on-invalid="null" />
        </service>
    </services>
</container>